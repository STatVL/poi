{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://geojson.org/schema/GeoJSON.json",
  "description": "A draft JSON Schema for OGC POI.",
  "title": "PointOfInterest",
  "properties": {
    "DataRecord": {
      "type": "object",
      "id": "#DataRecord",
      "label": {"type": "string"},
      "description": {"type": "string"},
      "properties": {
        "field": {
          "type": "object",
          "requried": [
            "name",
            "type"
          ],
          "properties": {
            "name": {"type": "string"},
            "type": {"type": "string"},
            "definition": {"type": "string"},
            "label": {"type": "string"},
            "uom": {"type": "string"}
          }
        }
      }
    },
    "DateTime": {
      "type": "string"  
    },
    "ScopedName": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "scope": {"type": "string"},
        "name": {"type": "string"}
      }  
    },
    "GenericName": {
      "type": "object",  
      "required": [
        "name"
      ],
      "properties": {
        "name": {"type": "string"}
      }  
    },
    "MD_Identifier": {
      "type": "object",
      "required": [
        "code"  
      ],
      "properties": {
        "authority": {"type": "string"},
        "code": {"type": "string"},
        "codeSpace": {"type": "string"},
        "description": {"type": "string"},
        "version": {"type": "string"}
      }
    },
    "CI_Date": {
      "type": "object",
      "required": [
        "code"  
      ],
      "properties": {
        "code": {"type": "string"},
        "dateType": {"type": "string"}
      }
    },
    "MD_Keyword": {
      "type": "object",
      "required": [
        "value"  
      ],
      "properties": {
        "authority": {"type": "string"},
        "type": {"type": "string"},
        "thesaurusName": {"type": "string"},
        "value": {"type": "string"}
      }
    },
    "CI_Telephone": {
      "type": "object",
      "required": [
        "number"  
      ],
      "properties": {
        "number": {"type": "string"},
        "numberType": {"type": "string"}
      }
    },
    "CI_Address": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "administrativeArea": {"type": "string"},
        "city": {"type": "string"},
        "country": {"type": "string"},
        "deliveryPoint": {"type": "string"},
        "email": {"type": "string"},
        "postalCode": {"type": "string"}
      }
    },
    "CI_Contact": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "address": {
          "$ref": "#/properties/CI_Address" 
        },
        "contactInstructions": {"type": "string"},
        "contactType": {"type": "string"},
        "hoursOfService": {"type": "string"},
        "onlineResource": {"type": "string"},
        "phone": {
          "$ref": "#/properties/CI_Telephone" 
        }
      } 
    },
    "reference": {
      "type": "object",
      "required": [
        "href"
      ],
      "properties": {
        "href": {"type": "string"},
        "created": {"type": "string"},
        "updated": {"type": "string"},
        "term": {"type": "string"},
        "typedescription": {"type": "string"},
        "value": {"type": "string"}
        }
    },
    "POI": {
      "type": "object",
      "id": "#PointOfInterest",
      "required": [
          "featureId"
      ],
      "properties": {
        "featureId": {"type": "number"},
        "description": {"type": "string"},
        "name": {
          "$ref": "#/properties/GenericName"        
        },
        "identifier": {
          "$ref": "#/properties/ScopedName"        
        },
        "creationDate": {
           "$ref": "#/properties/DateTime"        
        },
        "terminationDate": {
           "$ref": "#/properties/DateTime"        
        },
        "validFrom" : {
           "$ref": "#/properties/DateTime"        
        },
        "validTo": {
           "$ref": "#/properties/DateTime"        
        },
        "identifiers": {
          "$ref": "#/properties/MD_Identifier"        
        },
        "dates": {
           "$ref": "#/properties/CI_Date"        
        },
        "labels": {
           "$ref": "#/properties/MD_Identifier"        
        },
        "categories": {
           "$ref": "#/properties/MD_Keyword"        
        },
        "contactInfo": {
           "$ref": "#/properties/CI_Contact" 
        },
        "metadata": {"type": "string"},
        "constraints": {"type": "string"},
        "links": {
           "$ref": "#/properties/reference"  
        },
        "featureOfInterest": {
           "$ref": "#/properties/reference"  
        },
        "summary": {
          "$ref": "#/properties/DataRecord"
        }
      }
    }
  },
  "oneOf": [
    {
      "title": "GeoJSON Point",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "number"
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
    {
      "title": "GeoJSON LineString",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LineString"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "number"
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
    {
      "title": "GeoJSON Polygon",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 4,
            "items": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "number"
              }
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
     {
      "title": "GeoJSON Feature",
      "type": "object",
      "required": [
        "type",
        "properties",
        "geometry"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Feature"
          ]
        },
        "id": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "string"
            }
          ]
        },
        "properties": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/properties/POI"
            }
          ]
        },
        "geometry": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "title": "GeoJSON Point",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Point"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "number"
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "title": "GeoJSON LineString",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "LineString"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "title": "GeoJSON Polygon",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Polygon"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "minItems": 4,
                    "items": {
                      "type": "array",
                      "minItems": 2,
                      "items": {
                        "type": "number"
                      }
                    }
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          ]
        }
      }
    },
    {
      "title": "GeoJSON FeatureCollection",
      "type": "object",
      "required": [
        "type",
        "features"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "FeatureCollection"
          ]
        },
        "features": {
          "type": "array",
          "items": {
            "title": "GeoJSON Feature",
            "type": "object",
            "required": [
              "type",
              "properties",
              "geometry"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Feature"
                ]
              },
              "id": {
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "properties": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "$ref": "#/properties/POI"
                  }
                ]
              },
              "geometry": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "title": "GeoJSON Point",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "Point"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                          "type": "number"
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  {
                    "title": "GeoJSON LineString",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "LineString"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                          "type": "array",
                          "minItems": 2,
                          "items": {
                            "type": "number"
                          }
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  {
                    "title": "GeoJSON Polygon",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "Polygon"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "items": {
                          "type": "array",
                          "minItems": 4,
                          "items": {
                            "type": "array",
                            "minItems": 2,
                            "items": {
                              "type": "number"
                            }
                          }
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}
               
               