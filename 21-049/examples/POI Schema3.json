{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://geojson.org/schema/GeoJSON.json",
  "description": "A draft JSON Schema for OGC POI.",
  "title": "PointOfInterest",
  "oneOf": [
    {
      "title": "GeoJSON Point",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "number"
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
    {
      "title": "GeoJSON LineString",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LineString"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "number"
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
    {
      "title": "GeoJSON Polygon",
      "type": "object",
      "required": [
        "type",
        "coordinates"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 4,
            "items": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "number"
              }
            }
          }
        },
        "bbox": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "number"
          }
        }
      }
    },
     {
      "title": "GeoJSON Feature",
      "type": "object",
      "required": [
        "type",
        "properties",
        "geometry"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Feature"
          ]
        },
        "id": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "string"
            }
          ]
        },
        "properties": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object"
            }
          ]
        },
        "geometry": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "title": "GeoJSON Point",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Point"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "number"
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "title": "GeoJSON LineString",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "LineString"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            },
            {
              "title": "GeoJSON Polygon",
              "type": "object",
              "required": [
                "type",
                "coordinates"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Polygon"
                  ]
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "minItems": 4,
                    "items": {
                      "type": "array",
                      "minItems": 2,
                      "items": {
                        "type": "number"
                      }
                    }
                  }
                },
                "bbox": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          ]
        }
      }
    },
    {
      "title": "GeoJSON FeatureCollection",
      "type": "object",
      "required": [
        "type",
        "features"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "FeatureCollection"
          ]
        },
        "features": {
          "type": "array",
          "items": {
            "title": "GeoJSON Feature",
            "type": "object",
            "required": [
              "type",
              "properties",
              "geometry"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Feature"
                ]
              },
              "id": {
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "properties": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "$ref": "#/properties/POI"
                  }
                ]
              },
              "geometry": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "title": "GeoJSON Point",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "Point"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                          "type": "number"
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  {
                    "title": "GeoJSON LineString",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "LineString"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                          "type": "array",
                          "minItems": 2,
                          "items": {
                            "type": "number"
                          }
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  {
                    "title": "GeoJSON Polygon",
                    "type": "object",
                    "required": [
                      "type",
                      "coordinates"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "Polygon"
                        ]
                      },
                      "coordinates": {
                        "type": "array",
                        "items": {
                          "type": "array",
                          "minItems": 4,
                          "items": {
                            "type": "array",
                            "minItems": 2,
                            "items": {
                              "type": "number"
                            }
                          }
                        }
                      },
                      "bbox": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  ],
  "properties": {
    "POIProperty": {
      "type": "object",
      "id": "#POIProperty",
      "required": [
        "cardinality",
        "valueDomain",
        "valueType",
        "definition"
      ],
      "properties": {
        "cardinality": {"type": "string"},
        "valueDomain": {"type": "string"},
        "valueType": {"type": "string"},
        "constrainedBy": {"type": "string"},
        "definition": {"type": "string"},
        "description": {"type": "string"},
        "designation": {"type": "string"},
        "name": {"type": "string"},
        "value": {"type": "object"}
      }
    },
    "DateTime": {
      "type": "string"  
    },
    "ScopedName": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "scope": {"type": "string"},
        "name": {"type": "string"}
      }  
    },
    "GenericName": {
      "type": "object",  
      "required": [
        "name"
      ],
      "properties": {
        "name": {"type": "string"}
      }  
    },
    "MD_Identifier": {
      "type": "object",
      "required": [
        "code"  
      ],
      "properties": {
        "authority": {"type": "string"},
        "code": {"type": "string"},
        "codeSpace": {"type": "string"},
        "description": {"type": "string"},
        "version": {"type": "string"}
      }
    },
    "CI_Date": {
      "type": "object",
      "required": [
        "code"  
      ],
      "properties": {
        "code": {"type": "string"},
        "dateType": {"type": "string"}
      }
    },
    "MD_Keyword": {
      "type": "object",
      "required": [
        "value"  
      ],
      "properties": {
        "authority": {"type": "string"},
        "type": {"type": "string"},
        "thesaurusName": {"type": "string"},
        "value": {"type": "string"}
      }
    },
    "MD_Constraints": {
      "type": "object",
      "required": [
       ],
      "properties": {
        "constraintApplicationScope": {"type": "string"},
        "graphic": {
          "$ref": "#/properties/reference" 
        },
        "reference": {          
          "$ref": "#/properties/CI_Citation" 
        },
        "releasability": {          
          "$ref": "#/properties/MD_Releasability" 
        },
        "responsibleParty": {          
          "$ref": "#/properties/CI_Responsibility" 
        },
        "useLimitation": {"type": "string"},
        "MD_SecurityConstraints": {
          "type": "object",
          "required": [
            "classification"      
          ],
          "properties": {
            "classification": {"type": "string"},
            "classificationSystem": {"type": "string"},
            "handlingDescription": {"type": "string"},
            "userNote": {"type": "string"}
          }
         },
        "MD_LegalConstraints": {
          "type": "object",
          "required": [
          ],
          "properties": {
            "accessConstraints": {"type": "string"},
            "otherConstraints": {"type": "string"},
            "useConstraints": {"type": "string"}
          }            
        }
      }
    },
    "MD_Releasability": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "addressee": {
          "$ref": "#/properties/CI_Responsibility"
        },
        "disseminationConstraints": {"type": "string"},
        "statement": {"type": "string"} 
      }  
    },
    "CI_Telephone": {
      "type": "object",
      "required": [
        "number"  
      ],
      "properties": {
        "number": {"type": "string"},
        "numberType": {"type": "string"}
      }
    },
    "CI_Address": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "administrativeArea": {"type": "string"},
        "city": {"type": "string"},
        "country": {"type": "string"},
        "deliveryPoint": {"type": "string"},
        "email": {"type": "string"},
        "postalCode": {"type": "string"}
      }
    },
    "CI_OnlineResource": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "applicationProfile": {"type": "string"},
        "description": {"type": "string"},
        "function": {"type": "string"},
        "linkage": {"type": "string"},
        "name": {"type": "string"},
        "protocol": {"type": "string"},
        "protocolRequest": {"type": "string"}
        }
    },
    "CI_Contact": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "address": {
          "$ref": "#/properties/CI_Address" 
        },
        "contactInstructions": {"type": "string"},
        "contactType": {"type": "string"},
        "hoursOfService": {"type": "string"},
        "onlineResource": {"type": "string"},
        "phone": {
          "$ref": "#/properties/CI_Telephone" 
        }
      } 
    },
    "CI_Responsibility": {
      "type": "object",
      "required": [
        "role"
      ],
      "properties": {
        "role": {"type": "string"},
        "name": {"type": "string"},
        "positionName": {"type": "string"},
        "contactInfo": {
          "$ref": "#/properties/CI_Contact" 
        }
      }        
    },
    "CI_Citation": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "title": {"type": "string"},
        "alternateTitle": {"type": "string"},
        "citedResponsibleParty": {
          "$ref": "#/properties/CI_Responsibility"
        },
        "date": {
          "$ref": "#/properties/DateTime"
        },
        "edition": {"type": "string"},
        "editionDate": {
          "$ref": "#/properties/DateTime"
        },
        "graphic": {
          "$ref": "#/properties/reference"
        },
        "identifier": {
          "$ref": "#/properties/MD_Identifier"
        },
        "ISMN": {"type": "string"},
        "ISSN": {"type": "string"},
        "onlineResource": {
          "$ref": "#/properties/CI_OnlineResource"
        },
        "otherCitationDetails": {"type": "string"},
        "presentationForm": {"type": "string"},
        "series": {
          "$ref": "#/properties/CI_Series"
        }
      } 
    },
    "CI_Series": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "issueIdentification": {"type": "string"},
        "name": {"type": "string"},
        "page": {"type": "string"}
        }
    },
    "reference": {
      "type": "object",
      "required": [
        "href"
      ],
      "properties": {
        "href": {"type": "string"},
        "created": {"type": "string"},
        "updated": {"type": "string"},
        "term": {"type": "string"},
        "typedescription": {"type": "string"},
        "value": {"type": "string"}
        }
    },
    "POI": {
      "type": "object",
      "id": "#PointOfInterest",
      "required": [
          "featureId"
      ],
      "properties": {
        "featureID": {"type": "number"},
        "description": {"type": "string"},
        "name": {
          "$ref": "#/properties/GenericName"        
        },
        "identifier": {
          "$ref": "#/properties/ScopedName"        
        },
        "creationDate": {
           "$ref": "#/properties/DateTime"        
        },
        "terminationDate": {
           "$ref": "#/properties/DateTime"        
        },
        "validFrom" : {
           "$ref": "#/properties/DateTime"        
        },
        "validTo": {
           "$ref": "#/properties/DateTime"        
        },
        "contactInfo": {
           "$ref": "#/properties/CI_Responsibility" 
        },
        "hasFeatureOfInterest": {
           "$ref": "#/properties/reference"  
        },
        "hasMetadata": {
           "$ref": "#/properties/reference"  
        },
        "hasProperty": {
           "$ref": "#/properties/POIProperty"  
        },
        "keywords": {
           "$ref": "#/properties/MD_Keyword"        
        },
        "constraints": {
           "$ref": "#/properties/MD_Constraints"                    
        },
        "symbology": {
           "$ref": "#/properties/reference"  
        },
        "links": {
           "$ref": "#/properties/reference"  
        }
      }
    }
  }
}
               
               